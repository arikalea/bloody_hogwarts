<h1>Students</h1>
<h4>Average age of all students: <%= @students.average_age %></h4>
<% @students.each do |student| %>
  <section id="student-<%=student.id%>">
    <h2><%= link_to "#{student.name}", "students/#{student.id}" %></h2>
    <p>Age: <%= student.age %>
    <p>House: <%= student.house %>
  </section>
<% end %>
